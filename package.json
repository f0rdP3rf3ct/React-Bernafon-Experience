{
  "name": "bernafon-experience",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-intl": "^2.4.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "react-sound": "^1.2.0"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
